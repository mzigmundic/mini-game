package com.sucelje;

import org.newdawn.slick.opengl.Texture;

public class Gumb {
	
	private String ime;
	private Texture tekstura;
	private int x, y, sirina, visina;
	
	public Gumb(String ime, Texture tekstura, int x, int y, int sirina, int visina) {
		this.ime = ime;
		this.tekstura = tekstura;
		this.x = x;
		this.y = y;
		this.sirina = sirina;
		this.visina = visina;
	}
	
	public Gumb(String ime, Texture tekstura, int x, int y) {
		this.ime = ime;
		this.tekstura = tekstura;
		this.x = x;
		this.y = y;
		this.sirina = tekstura.getImageWidth();
		this.visina = tekstura.getImageHeight();
	}

	public String dohvatiIme() {
		return ime;
	}

	public void postaviIme(String ime) {
		this.ime = ime;
	}

	public Texture dohvatiTeksturu() {
		return tekstura;
	}

	public void postaviTeksturu(Texture tekstura) {
		this.tekstura = tekstura;
	}

	public int dohvatiX() {
		return x;
	}

	public void postaviX(int x) {
		this.x = x;
	}

	public int dohvatiY() {
		return y;
	}

	public void postaviY(int y) {
		this.y = y;
	}

	public int dohvatiSirinu() {
		return sirina;
	}

	public void postaviSirinu(int sirina) {
		this.sirina = sirina;
	}

	public int dohvatiVisinu() {
		return visina;
	}

	public void postaviVisinu(int visina) {
		this.visina = visina;
	}
	
	
	
	

}

package data;

public class TockaProvjerePutanje {
	
	private Plocica tile;
	private int xSmjer, ySmjer;
	
	public TockaProvjerePutanje(Plocica tile, int xSmjer, int ySmjer) {
		this.tile = tile;
		this.xSmjer = xSmjer;
		this.ySmjer = ySmjer;
	}

	public Plocica dohvatiPlocicu() {
		return tile;
	}

	public int getxDirection() {
		return xSmjer;
	}

	public int getyDirection() {
		return ySmjer;
	}
	
}

package data;

import org.newdawn.slick.opengl.Texture;
import static helpers.Grafika.*;

public enum TipTopa {

	TopNarancasti(new Texture[] {QuickLoad("topBazaNarancasta"), QuickLoad("TopGunNarancasti")}, TipProjektila.MetakVatraMali, 10, 1000, 1, 30),
	TopLed(new Texture[] {QuickLoad("cannonBaseIce"), QuickLoad("cannonGunIce")}, TipProjektila.MetakVatraCrveni, 20, 1000, 2, 40),
	CannonUltra(new Texture[] {QuickLoad("cannonBaseUltra"), QuickLoad("cannonGunUltra")}, TipProjektila.MetakCrveni, 20, 1000, 2, 80);
	
	Texture[] tekstura;
	TipProjektila tipProjektila;
	int damage, range, cost;
	float firingSpeed;
	
	TipTopa(Texture[] tekstura, TipProjektila tipProjektila, int damage, int range, float firingSpeed, int cost) {
		this.tekstura = tekstura;
		this.tipProjektila = tipProjektila;
		this.damage = damage;
		this.range = range;
		this.firingSpeed = firingSpeed;
		this.cost = cost;
	}
	
}

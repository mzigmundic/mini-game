package helpers;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.File;
import java.io.FileReader;
import java.io.FileWriter;
import data.Plocica;
import data.PlociceMap;
import data.PlocicaTip;

public class Level {
	
	public static void SaveMap(String mapName, PlociceMap grid) {
		String mapData = "";
		for (int i = 0; i < grid.getTilesWide(); i++) {
			for (int j = 0; j < grid.getTilesHigh(); j++) {
				mapData += getTileID(grid.dohvatiPlocicu(i, j));
			}
		}
		try {
			File file = new File(mapName);
			BufferedWriter bw = new BufferedWriter(new FileWriter(file));
			bw.write(mapData);
			bw.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public static PlociceMap LoadMap(String mapName) {
		PlociceMap grid = new PlociceMap();
		try {
			BufferedReader br = new BufferedReader(new FileReader(mapName));
			String data = br.readLine();
			for (int i = 0; i < grid.getTilesWide(); i++) {
				for (int j = 0; j < grid.getTilesHigh(); j++) {
					grid.postaviPlocicu(i, j, getTileType(data.substring(i * grid.getTilesHigh() + j, i * grid.getTilesHigh() + j + 1)));
				}
			}
			br.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		
		return grid;
	}
	
	public static PlocicaTip getTileType(String ID) {
		PlocicaTip type = PlocicaTip.NULL;
		switch (ID) {
		case "0":
			type = PlocicaTip.Grass;
			break;
		case "1":
			type = PlocicaTip.Dirt;
			break;
		case "2":
			type = PlocicaTip.Water;
			break;
		case "3":
			type = PlocicaTip.NULL;
			break;
		}
		return type;
	}
	
	public static String getTileID(Plocica t) {
		String ID = "E";
		switch (t.getType()) {
		case Grass:
			ID = "0";
			break;
		case Dirt:
			ID = "1";
			break;
		case Water:
			ID = "2";
			break;
		case NULL:
			ID = "3";
			break;
		}	
		return ID;
	}
	
	
	
	
}